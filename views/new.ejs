<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/autosize.js/6.0.1/autosize.min.js"
        integrity="sha512-OjjaC+tijryqhyPqy7jWSPCRj7fcosu1zreTX1k+OWSwu6uSqLLQ2kxaqL9UpR7xFaPsCwhMf1bQABw2rCxMbg=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <title>tasteBin</title>
</head>

<body>
    <form action="/save" method="POST">
        <!-- canSave is true because new text -->
        <%- include("_buttons.ejs", { canSave: true }) %>
        <article class="wrapper">
            <div class="line-numbers">
                &gt;
            </div>
            <textarea autofocus name="value" placeholder="Input here your code..."><%= value %></textarea>
        </article>
    </form>
    <script>
        autosize(document.querySelector('textarea'))
    </script>
</body>

</html>